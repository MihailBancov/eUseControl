@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <link href="~/Images/Headers/web_icon.png" rel="shortcut icon" type="image/x-icon" />
    <title>Sloboda </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @Styles.Render("~/bundles/icomoon/css")

    @Styles.Render("~/bundles/DMSans/css")

    @Styles.Render("~/bundles/bootstrap/css")

    @Styles.Render("~/bundles/flaticon/css")

    @Styles.Render("~/bundles/slideshow/css")

    @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", false)}

    <!-- MAIN CSS -->
    @Styles.Render("~/bundles/main/css")

</head>
<body style="font-family:'DM Sans'" data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <div class="site-wrap" id="home-section">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
        <header class="site-navbar site-navbar-target" role="banner">
            @Html.Partial("_Header")
        </header>
        @Html.Partial("_VehicleConfigBlock")

        <div id="cars" class="site-section bg-light">
            @RenderBody()
        </div>

        <div class="container site-section mb-5">
            @Html.Partial("_OrderFlow")
        </div>
        <div class="site-section bg-light">
            @Html.Partial("_CustomerReview")
        </div>

        <footer class="site-footer">
            @Html.Partial("_Footer")
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery/js")
    @RenderSection("scripts", required: false)
</body>
</html>